<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvDrinkName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="60dp"
        android:layout_marginTop="185dp"
        android:text="Drink name"
        android:textSize="25sp"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="158dp" />

    <TextView
        android:id="@+id/tvDrinkPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="85dp"
        android:layout_marginTop="225dp"
        android:layout_marginRight="55dp"
        android:text="Drink Price"
        android:textSize="17sp" />

    <EditText
        android:id="@+id/input_qty"
        android:layout_width="137dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="193dp"
        android:layout_marginEnd="61dp"
        android:hint="Quantity"
        android:textSize="25sp" />

    <Button
        android:id="@+id/btn_myorder"
        android:layout_width="115dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="57dp"
        android:layout_marginEnd="76dp"
        android:onClick="onClickMyOrder"
        android:text="@string/my_order"
        android:textSize="16sp" />

    <Button
        android:id="@+id/btn_order_more"
        android:layout_width="115dp"
        android:layout_height="69dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="338dp"
        android:layout_marginEnd="72dp"
        android:onClick="onClickOrderMore"
        android:text="@string/order_more"
        android:textSize="16sp" />
</RelativeLayout>